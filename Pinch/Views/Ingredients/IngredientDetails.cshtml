@model Pinch.ViewModels.Ingredients.IngredientDetailsNewViewModel

@{
    ViewBag.Title = "IngredientDetails";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.RouteUrl("AllRecipes")">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.RouteUrl("RecipeDetails", new { id = Model.RecipeId})">Recipe @Model.RecipeId</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Ingredient.Name</li>
    </ol>
</nav>

<h3>PinchOfTaste User's Ingredient</h3>

<br />
@using (Html.BeginForm("IngredientDetails", "Ingredients", new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(m => m.Ingredient.Id)

    <div class="form-group row">
        @Html.LabelFor(m => m.Ingredient.Name, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10 col-lg-10">
            @Html.TextBoxFor(m => m.Ingredient.Name, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(m => m.Ingredient.Name)
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.Ingredient.IngredientImage, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10 col-lg-10">
            @Html.TextBoxFor(m => m.Ingredient.IngredientImage, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.Ingredient.IsMainIngredient, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10 col-lg-10">
            @Html.CheckBoxFor(m => m.Ingredient.IsMainIngredient, new { @class = "checkbox" })
        </div>
    </div>

    <button class="btn btn-success col-sm-offset-2" type="submit">Edit Ingredient</button>

}


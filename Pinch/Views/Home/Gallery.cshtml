@model List<Pinch.Models.Recipe>
@{
    ViewBag.Title = "Gallery";
}
<h2>PinchOfTaste's @ViewBag.Title.</h2>

<div id="container"></div>
@{
    var itemCount = 1;
    foreach (var recipe in Model)
    {
        <div class="row">
            while (itemCount != 4)
            {
            <div class="col-sm-3 panel panel-warning">
                <div class="panel-heading"><h3 class="panel-title">@recipe.Name</h3></div>
                <div class="panel-body"><img src="@recipe.ImageLink" alt="@recipe.Name" width="100" height="100"</div>
                <div class="panel-footer">@recipe.Description</div>
            </div>
            itemCount += 1;
            }
        </div>
        itemCount = 1;
    }

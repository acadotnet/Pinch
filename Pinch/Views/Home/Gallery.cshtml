@model List<Pinch.Models.Recipe>
@{
    ViewBag.Title = "Gallery";
}
<h2>PinchOfTaste's @ViewBag.Title.</h2>


@{
    var itemCount = 1;
}
<div class="row">
    @foreach (var recipe in Model)
    {
        if (itemCount % 4 != 0)
        {
            <div class="col-xs-12 col-sm-4 col-md-3 panel panel-warning clearfix">
                <div class="panel-heading"><h3 class="panel-title">@recipe.Name</h3></div>
                <div class="panel-body"><img class="float-img" src="@recipe.ImageLink" alt="@recipe.Name" width="200" height="200" /></div>
                <div class="panel-footer">@recipe.Description</div>
            </div>
        }
    }
</div>


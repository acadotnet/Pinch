@using Newtonsoft.Json
@model Pinch.Models.Recipe
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "Recipes", new { @class = "form-horizontal" }))
{
    <div class="form-group row">
        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10 col-lg-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10 col-lg-10">
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.IsFavorite, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10 col-lg-10">
            @Html.CheckBoxFor(m => m.IsFavorite, new { @class = "checkbox" })
        </div>
    </div>

    @*<div class="form-group row">
            @Html.LabelFor(m => m.RecipeIngredients, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10 col-lg-10">
                 <button id="add-ingredient" class="btn btn-success">Add Ingredients</button>
            </div>
        </div>*@

    <button class="btn btn-success col-sm-offset-2" type="submit">Add Recipe</button>

}

